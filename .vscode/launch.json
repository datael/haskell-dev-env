{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "ghc",
            "request": "launch",
            "name": "haskell(stack)",
            "internalConsoleOptions": "openOnSessionStart",
            "workspace": "${workspaceFolder}",
            "startup": "${file}",
            "startupFunc": "",
            "startupArgs": "",
            "stopOnEntry": false,
            "mainArgs": "",
            "ghciPrompt": "H>>= ",
            "ghciInitialPrompt": "Prelude>",
            "ghciCmd": "stack ghci --test --no-load --no-build --main-is TARGET",
            "ghciEnv": {},
            "logFile": "/dev/null", // This cannot be an empty string for some reason
            "logLevel": "WARNING",
            "forceInspect": false
        },
    ]
}
